@model SystemExamWebSite.DataBase.tbl_Exam
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>  إمتحان أونلاين | إدارة الامتحانات </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta content="نظام إمتحان أونلاين" name="description" />
    <meta content="MohamedEid" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/logonew.png">
    <!-- App css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/metismenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/style.css" rel="stylesheet" type="text/css" />

    <script src="~/assets/js/modernizr.min.js"></script>


</head>


<body>

    <!-- Begin page -->
    <div id="wrapper" class="mt-2">
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="p-2 m-0 text-center">
                <h3> <img src="~/assets/images/logoblue.png" width="120" height="50" /></h3>
            </div>

            <!--- Sidemenu -->
            <div id="sidebar-menu" class="pt-0 mt-0">
                <!-- Left Menu Start -->
                <ul class="metismenu text-right" id="side-menu">
                    <li>
                        <a href="" onclick="return false">
                            <span> الرئيسية </span>   <i class="ti-bookmark"></i>
                        </a>
                    </li>
                    <li>
                        <a href="" onclick="return false">
                            <span> إدارة الإعلانات </span> <i class="ti-announcement"></i>
                        </a>
                    </li>
                    <li>
                        <a href="" onclick="return false">
                            <span> إدارة المواضيع </span> <i class="ti-file"></i>
                        </a>
                    </li>
                    <li>
                        <a href="" onclick="return false">
                            <span> إدارة الامتحانات </span>  <i class="ti-agenda"></i>
                        </a>
                    </li>
                    <li>
                        <a href="" onclick="return false">
                            <span> إدارة الاسئلة  </span> <i class="ti-help"></i>
                        </a>
                    </li>
                    <li>
                        <a href="" onclick="return false">
                            <span> الطلاب </span>  <i class="ti-id-badge"></i>
                        </a>
                    </li>
                    <li>
                        <a href="" onclick="return false">
                            <span> نتائج الامتحانات </span>  <i class="ti-cup"></i>
                        </a>
                    </li>
                    <li>
                        <a href="" onclick="return false">
                            <span> الإعدادت </span>  <i class="ti-settings"></i>
                        </a>
                    </li>
                    <li>
                        <a href="" onclick="return false">
                            <span> تسجيل خروج </span>  <i class="ti-export"></i>
                        </a>
                    </li>
                </ul>

            </div>
            <!-- Sidebar -->
            <div class="clearfix"></div>

        </div>

        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->

        <div class="content-page">
            <!-- Start content -->
            <div class="content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-sm-12">
                            <h4 class="header-title m-t-0 m-b-20 text-right"> تفاصيل امتحان <span class="fa fa-eye"> </span></h4>
                            <h4 class="text-right text-custom"> <span>@Html.DisplayFor(model => model.Exam_Id)</span> المعرف الخاص بالامتحان </h4>
                            <table class="table table-bordered table-condensed" style="width:100%;">
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right">@Html.DisplayFor(model => model.tbl_Subject.Subject_Name) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right">موضوع الامتحان</p>
                                    </td>
                                </tr>
                                <tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right">@Html.DisplayFor(model => model.Exam_Name) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right">اسم الامتحان</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right">@Html.DisplayFor(model => model.Exam_Instruction) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right">تفاصيل الامتحان</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right">@Html.DisplayFor(model => model.Exam_MuniteDuration) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right"> زمن الامتحان</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right">@Html.DisplayFor(model => model.Exam_TotalMark) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right">الدرجات الكلية </p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right">@Html.DisplayFor(model => model.Exam_PassingMark) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right">درجات النجاح</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right">@Html.DisplayFor(model => model.Exam_StartOn) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right">بداية الامتحان</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right">@Html.DisplayFor(model => model.Exam_EndOn) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right">نهاية الامتحان</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right"> @Html.DisplayFor(model => model.tbl_Teacher.Teacher_Name) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right"> المدرس صاحب الإنشاء</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:65%">
                                        <p class="text-right"> @Html.DisplayFor(model => model.Exam_CreatedOn) </p>
                                    </td>
                                    <td style="width:35%">
                                        <p class="text-right">  تاريخ الإنشاء</p>
                                    </td>
                                </tr>

                            </table>



                            <br />
                            <br />
                            <div class="form-group">
                                <div class="row">
                                    @Html.ActionLink("العودة للصفحة السابقة", "ExamManagement", "Teacher", new { id = "" }, new { @class = "btn-custom-secondary" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- container -->
                <div class="footer">
                    <div class="pull-right hide-phone">
                        محمد عيد 2020
                    </div>
                </div>
            </div> <!-- content -->
        </div>
        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->


    </div>

    <!-- END wrapper -->
    <!-- jQuery  -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/metisMenu.min.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/jquery.slimscroll.js"></script>

    <!-- App js -->
    <script src="~/assets/js/jquery.core.js"></script>
    <script src="~/assets/js/jquery.app.js"></script>

</body>
</html>